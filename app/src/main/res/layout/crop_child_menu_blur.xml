<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/crop_bar_height"
    android:background="@color/theme_color"
    android:divider="@drawable/divider_gradient"
    android:showDividers="middle"
    android:dividerPadding="@dimen/crop_bar_menu_divider_padding">
    <RelativeLayout
        android:id="@+id/crop_child_menu_blur_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/semitransparent_black_bg">
        <ImageView
            android:id="@+id/crop_child_menu_blur_icn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/crop_menu_blur_press"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_below="@id/crop_child_menu_blur_icn"
            android:text="背景模糊"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back2"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:layout_toLeftOf="@id/crop_child_menu_blur_icn"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/crop_child_menu_pen_size"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/semitransparent_black_bg">
        <ImageView
            android:id="@+id/crop_child_menu_pen_size_icn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/brush_size"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_below="@id/crop_child_menu_pen_size_icn"
            android:text="模糊擦除"
            android:textSize="9sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/crop_child_menu_blur_size"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/semitransparent_black_bg">

        <ImageView
            android:id="@+id/crop_child_menu_blur_size_icn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/blur_size"
            android:layout_centerInParent="true"
            android:background="@drawable/semitransparent_black_bg"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_below="@id/crop_child_menu_blur_size_icn"
            android:text="模糊程度"
            android:textSize="9sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>